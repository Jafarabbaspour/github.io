@model System.Collections.Generic.List<Jafarabbaspour.Models.WorkExperience>


<div class="card">
    <h5 class="card-header">List</h5>
    <div class="table-responsive text-nowrap">
        @if (Model is not null && Model.Any())
        {
            <table class="table mb-5">
                <thead>
                <tr>
                    <th>Job title</th>
                    <th>Location</th>
            
                </tr>
                </thead>
                <tbody class="table-border-bottom-0">

                @foreach (var item in Model)
                {
                    <tr>
                        <td> <strong>@item.JobTitle</strong></td>
                       
                        <td>
                            <strong>@item.Location</strong>
                        </td>
                    

                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-action="UpdateWorkExperience" asp-route-id="@item.Id" ><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                    <a class="dropdown-item" asp-action="DeleteWorkExperience" asp-route-id="@item.Id"><i class="bx bx-trash me-1"></i> Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }

           

                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info m-5"> there is no data !</div>
        }
    </div>
</div>