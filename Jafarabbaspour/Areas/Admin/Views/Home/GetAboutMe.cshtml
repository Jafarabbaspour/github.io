@model Jafarabbaspour.Models.AboutMe

<div class="col-12">
    <div class="row">
        <div class="card accordion-item">
            <h2 class="accordion-header" id="headingDeliveryAddress">
                @*      <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseDeliveryAddress" aria-expanded="true" aria-controls="collapseDeliveryAddress">
                About mme
                </button> *@
            </h2>
            <div id="collapseDeliveryAddress" class="accordion-collapse collapse show" aria-labelledby="headingDeliveryAddress" data-bs-parent="#collapsibleSection">
                <form asp-action="AddOrUpdateAboutMe">
                    <input type="hidden" asp-for="Id"/>
                    <div class="accordion-body">
                        <div class="row">
                            <div class="col-12 m-5">
                                <div class="row">
                                    <label class="col-sm-1 col-form-label text-sm-end" for="collapsible-address">About me</label>
                                    <div class="col-sm-10">
                                        <textarea asp-for="About" class="form-control" id="collapsible-address" rows="10" placeholder="About me"></textarea>
                                    </div>
                                </div>
                            </div>

                            <div class="m-2 text-end">
                                <button type="submit" class="btn btn-success"> Submit</button>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>